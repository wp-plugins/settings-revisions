#!/usr/bin/env php
<?php
try {
	$readme_txt_path = __DIR__ . '/../readme.txt';
	$readme_md_path = __DIR__ . '/../readme.md';

	require_once __DIR__ . '/../php/readme-parser.php';

	$readme = new \SettingsRevisions\ReadmeParser( array( 'path' => $readme_txt_path ) );

	$markdown = $readme->to_markdown( array(
		'travis_ci_url' => preg_replace( '/^.+?:(.+)\.git$/', 'https://travis-ci.org/$1', trim(`git config --get remote.origin.url`) ),
	) );

	$is_written = file_put_contents( $readme_md_path, $markdown );
	if ( ! $is_written ) {
		throw new Exception( 'Failed to write to readme.md' );
	}
	fwrite( STDERR, "Successfully wrote to readme.md\n" );
}
catch( Exception $e ) {
	fwrite( STDERR, $e->getMessage() . "\n" );
	exit( 1 );
}
